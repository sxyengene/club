<!--index.wxml-->
<view class="container">
  <view class='navwrap'>
    <view class="weui-cell">
      <view class="weui-cell__hd" style="position: relative;margin-right: 10px;">
        <image src="https://i-debug.com/frontclub/public/avatar/boy.jpg" class='avatar' />
      </view>
      <view class="weui-cell__bd">
        <view>联系人名称</view>
        <view style="font-size: 13px;color: #888888;">摘要信息</view>
      </view>
    </view>
    <block wx:for="{{navList}}">
      <view class='block-wrap'>
        <navigator open-type='navigate' url='/pages/list/list'>
          <button class="block {{item.bg}}" hover-class='hover-class'></button>
          <text class='block-text'>{{item.title}}</text>
        </navigator>
      </view>
    </block>
  </view>
</view>