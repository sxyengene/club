<view class='container' id="container">
  <view class='comTitle'>前端俱乐部登录</view>
  <view wx:if="{{!hasAuthSetting}}">
    <view class="userinfo">
      <view class="userinfo-avatar mb10">
        <open-data type="userAvatarUrl"></open-data>
      </view>
        <open-data class="mb10 green fz40" type="userNickName"></open-data>
    </view>
    <button class='greenbg cfff' open-type="getUserInfo" bindgetuserinfo="bindGetUserInfo">授权登录</button>
  </view>
  
  <view class='page list js_show'>
     <view class="weui-cells">
        <view class="weui-cell weui-cell_input weui-cells_after-title">
          <view class="weui-cell__hd">
              <view class="weui-label">用户名</view>
          </view>
          <view class="weui-cell__bd">
              <input class="weui-input" placeholder="请输入用户名" bindinput="usernameInput"/>
          </view>
        </view>
        <view class="weui-cell weui-cell_input weui-cell_vcode">
            <view class="weui-cell__hd">
                <view class="weui-label">密码</view>
            </view>
            <view class="weui-cell__bd">
                <input password type='text' class="weui-input" placeholder="请输入密码" bindinput='passwordInput' />
            </view>
        </view>
     </view>
     <button class="weui-btn" type="primary" bindtap="login">登录</button>
  </view>
</view>